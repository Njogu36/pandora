    style.
     .alert-error
      {
          color: #a94442;
          background-color: #f2dede;
          border-color: #ebccd1;
      }
  body
    // Content
    .authentication-wrapper.authentication-cover.authentication-bg
      .authentication-inner.row
        // /Left Text
        .d-none.d-lg-flex.col-lg-7.p-0
          .auth-cover-bg.auth-cover-bg-color.d-flex.justify-content-center.align-items-center
            img.img-fluid.my-5.auth-illustration(src='../../assets/img/illustrations/auth-login-illustration-light.png' alt='auth-login-cover' data-app-light-img='illustrations/auth-login-illustration-light.png' data-app-dark-img='illustrations/auth-login-illustration-dark.png')
            img.platform-bg(src='../../assets/img/illustrations/bg-shape-image-light.png' alt='auth-login-cover' data-app-light-img='illustrations/bg-shape-image-light.png' data-app-dark-img='illustrations/bg-shape-image-dark.png')
        // /Left Text
        // Login
        .d-flex.col-12.col-lg-5.align-items-center.p-sm-5.p-4
          .w-px-400.mx-auto
            // Logo
            .app-brand.mb-4
              a.app-brand-link.gap-2(href='/')
                span.app-brand-logo
                
                    img(src='/assets/logo/logo.png' style='width:100px')
            // /Logo
            h3.mb-1.fw-bold Welcome to Pandora Prints! 👋
            p.mb-4 Please sign-in to your account and start the adventure
            != messages('message', locals)
                  
            form#formAuthentication.mb-3(action='/auth/login' method='POST')
              .mb-3
                label.form-label(for='email') Email or Username
                input#email.form-control(type='text' name='username' placeholder='Enter your email or username' autofocus='')
              .mb-3.form-password-toggle
                .d-flex.justify-content-between
                  label.form-label(for='password') Password
                  a(href='/auth/forgot_password')
                    small Forgot Password?
                .input-group.input-group-merge
                  input#password.form-control(type='password' name='password' placeholder='············' aria-describedby='password')
                  span.input-group-text.cursor-pointer
                    i.ti.ti-eye-off
              .mb-3
                .form-check
                  input#remember-me.form-check-input(type='checkbox')
                  label.form-check-label(for='remember-me')  Remember Me 
              button.btn.btn-primary.d-grid.w-100 Sign in
            p.text-center
              span New on our platform? 
              a(href='/auth/register')
                span Create an account
            
        // /Login
        // / Content
        // Core JS
        // build:js assets/vendor/js/core.js
        script(src='../../assets/vendor/libs/jquery/jquery.js')
        script(src='../../assets/vendor/libs/popper/popper.js')
