doctype html
html.light-style.customizer-hide(lang='en' dir='ltr' data-theme='theme-default' data-assets-path='../../assets/' data-template='horizontal-menu-template-no-customizer')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0')
    title Pandora Prints - Register
    meta(name='description' content='')
    // Favicon
    link(rel='icon' sizes='192x192' href='./assets/favicons/favicon.ico')
    // Fonts
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap' rel='stylesheet')
    // Icons
    link(rel='stylesheet' href='../../assets/vendor/fonts/fontawesome.css')
    link(rel='stylesheet' href='../../assets/vendor/fonts/tabler-icons.css')
    link(rel='stylesheet' href='../../assets/vendor/fonts/flag-icons.css')
    // Core CSS
    link(rel='stylesheet' href='../../assets/vendor/css/rtl/core.css')
    link(rel='stylesheet' href='../../assets/vendor/css/rtl/theme-default.css')
    link(rel='stylesheet' href='../../assets/css/demo.css')
    // Vendors CSS
    link(rel='stylesheet' href='../../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css')
    link(rel='stylesheet' href='../../assets/vendor/libs/node-waves/node-waves.css')
    link(rel='stylesheet' href='../../assets/vendor/libs/typeahead-js/typeahead.css')
    // Vendor
    link(rel='stylesheet' href='../../assets/vendor/libs/formvalidation/dist/css/formValidation.min.css')
    // Page CSS
    // Page
    link(rel='stylesheet' href='../../assets/vendor/css/pages/page-auth.css')
    // Helpers
    script(src='../../assets/vendor/js/helpers.js')
    // ! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section
    // ? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.
    script(src='../../assets/js/config.js')
  body
    // Content
    .authentication-wrapper.authentication-cover.authentication-bg
      .authentication-inner.row
        // /Left Text
        .d-none.d-lg-flex.col-lg-4.p-0
        
        .d-flex.col-12.col-lg-4.align-items-center.p-sm-5.p-4
          .w-px-400.mx-auto
            // Logo
            div
              a(href="/")
               i.fa.fa-arrow-left
               &nbsp;
               | Go back to home
              br
              br
            .app-brand.mb-4
             
             div(style='text-align:center')

              a.app-brand-link.gap-2(href='/')
                span.app-brand-logo 
                   img(src='/assets/logo/logo.png' style='width:100px')
            // /Logo
            
            != messages('message', locals)
                  
            form#formAuthentication.mb-3(action='/auth/register_user' method='POST')
              .mb-3
                label.form-label(for='username') First Name
                input#username.form-control(type='text' name='first_name' placeholder='Enter your first_name' autofocus='')
              .mb-3
                label.form-label(for='username') Last Name
                input#username.form-control(type='text' name='last_name' placeholder='Enter your last_name' autofocus='')
              
              .mb-3
                label.form-label(for='email') Email
                input#email.form-control(type='text' name='email' placeholder='Enter your email')
              .mb-3.form-password-toggle
                label.form-label(for='password') Password
                .input-group.input-group-merge
                  input#password.form-control(type='password' name='password' placeholder='············' aria-describedby='password')
                  span.input-group-text.cursor-pointer
                    i.ti.ti-eye-off
              .mb-3.form-password-toggle
                label.form-label(for='password') Confirm Password
                .input-group.input-group-merge
                  input#password.form-control(type='password' name='password2' placeholder='············' aria-describedby='password')
                  span.input-group-text.cursor-pointer
                    i.ti.ti-eye-off
              .mb-3
                .form-check
                  input#terms-conditions.form-check-input(type='checkbox' name='terms')
                  label.form-check-label(for='terms-conditions')
                    | I agree to 
                    a(href='javascript:void(0);') privacy policy & terms
              button.btn.btn-primary.d-grid.w-100 Sign up
            p.text-center
              span Already have an account? 
              a(href='/auth')
                span Sign in instead
        .d-none.d-lg-flex.col-lg-4.p-0 
        // /Register
        // / Content
        // Core JS
        // build:js assets/vendor/js/core.js
        script(src='../../assets/vendor/libs/jquery/jquery.js')
        script(src='../../assets/vendor/libs/popper/popper.js')
        script(src='../../assets/vendor/js/bootstrap.js')
        script(src='../../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js')
        script(src='../../assets/vendor/libs/node-waves/node-waves.js')
        script(src='../../assets/vendor/libs/hammer/hammer.js')
        script(src='../../assets/vendor/libs/i18n/i18n.js')
        script(src='../../assets/vendor/libs/typeahead-js/typeahead.js')
        script(src='../../assets/vendor/js/menu.js')
        // endbuild
        // Vendors JS
        script(src='../../assets/vendor/libs/formvalidation/dist/js/FormValidation.min.js')
        script(src='../../assets/vendor/libs/formvalidation/dist/js/plugins/Bootstrap5.min.js')
        script(src='../../assets/vendor/libs/formvalidation/dist/js/plugins/AutoFocus.min.js')
        // Main JS
        script(src='../../assets/js/main.js')
        // Page JS
        script(src='../../assets/js/pages-auth.js')
