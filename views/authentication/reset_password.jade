    script(src='../../assets/js/config.js')
  body
    // Content
    .authentication-wrapper.authentication-cover.authentication-bg
      .authentication-inner.row
        // /Left Text
        .d-none.d-lg-flex.col-lg-7.p-0
          .auth-cover-bg.auth-cover-bg-color.d-flex.justify-content-center.align-items-center
            img.img-fluid.my-5.auth-illustration(src='../../assets/img/illustrations/auth-reset-password-illustration-light.png' alt='auth-reset-password-cover' data-app-light-img='illustrations/auth-reset-password-illustration-light.png' data-app-dark-img='illustrations/auth-reset-password-illustration-dark.png')
            img.platform-bg(src='../../assets/img/illustrations/bg-shape-image-light.png' alt='auth-reset-password-cover' data-app-light-img='illustrations/bg-shape-image-light.png' data-app-dark-img='illustrations/bg-shape-image-dark.png')
        // /Left Text
        // Reset Password
        .d-flex.col-12.col-lg-5.col-xl-4.align-items-center.p-4.p-sm-5
          .w-px-400.mx-auto
            // Logo
            .app-brand.mb-4
              a.app-brand-link.gap-2(href='/')
                span.app-brand-logo
                 img(src='/assets/logo/logo.png' style='width:100px')
            h3.mb-1.fw-bold Reset Password 🔒
            p.mb-4
              | for 
              span.fw-bold john.doe@email.com
            form#formAuthentication.mb-3(action='/auth/reset_password/' method='POST')
              .mb-3.form-password-toggle
                label.form-label(for='password') New Password
                .input-group.input-group-merge
                  input#password.form-control(type='password' name='password' placeholder='············' aria-describedby='password')
                  span.input-group-text.cursor-pointer
                    i.ti.ti-eye-off
              .mb-3.form-password-toggle
                label.form-label(for='confirm-password') Confirm Password
                .input-group.input-group-merge
                  input#confirm-password.form-control(type='password' name='confirm-password' placeholder='············' aria-describedby='password')
                  span.input-group-text.cursor-pointer
                    i.ti.ti-eye-off
              button.btn.btn-primary.d-grid.w-100.mb-3 Set new password
              .text-center
                a(href='/auth')
                  i.ti.ti-chevron-left.scaleX-n1-rtl
                  |                   Back to login
        // /Reset Password
        // / Content
        // Core JS
        // build:js assets/vendor/js/core.js
        script(src='../../assets/vendor/libs/jquery/jquery.js')
        script(src='../../assets/vendor/libs/popper/popper.js')
        script(src='../../assets/vendor/js/bootstrap.js')
        script(src='../../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js')
        script(src='../../assets/vendor/libs/node-waves/node-waves.js')
        script(src='../../assets/vendor/libs/hammer/hammer.js')
        script(src='../../assets/vendor/libs/i18n/i18n.js')
        script(src='../../assets/vendor/libs/typeahead-js/typeahead.js')
        script(src='../../assets/vendor/js/menu.js')
        // endbuild
        // Vendors JS
        script(src='../../assets/vendor/libs/formvalidation/dist/js/FormValidation.min.js')
        script(src='../../assets/vendor/libs/formvalidation/dist/js/plugins/Bootstrap5.min.js')
        script(src='../../assets/vendor/libs/formvalidation/dist/js/plugins/AutoFocus.min.js')
        // Main JS
        script(src='../../assets/js/main.js')
        // Page JS
        script(src='../../assets/js/pages-auth.js')
